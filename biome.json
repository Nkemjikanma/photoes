{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"ignore": [
			"node_modules/**",
			"dist/**",
			"apps/contract/lib/**",
			"apps/contract/out/**",
			"apps/web/.next/**",
			"apps/web/node_modules/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules/**",
			"dist/**",
			"apps/contract/lib/**",
			"apps/contract/out/**",
			"apps/web/.next/**",
			"apps/web/node_modules/**"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
